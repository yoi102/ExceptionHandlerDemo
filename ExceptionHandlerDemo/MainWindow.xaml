        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExceptionHandlerDemo"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <WrapPanel>
            <Button Margin="5"
                    Height="40"
                    Content="丢SampleException"
                    Click="Button_Click1" />

            <Button Margin="5"
